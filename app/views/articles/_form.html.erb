
<% if @article.errors.any? %>
<h2>The following errors prevented the article from being created.</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %> 
  </ul>
<% end %>


<div class="row"></div>
  <div class="col-sm-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
          <%= f.label :title, class: "col-sm-2 control-label"%>
          <div class="col-sm-8">
            <%= f.text_field :title, class: "form-control", placeholder: "Enter title" %>
          </div>
      </div>
      <div class="form-group">
        <%= f.label :description, class: "col-sm-2 control-label" %><br>
        <div class="col-sm-8">
          <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Ehter description" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    
    <% end %>
    
    <%= link_to "Article List", articles_path %>
  </div>
</div>